<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Productos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

  <div class="container py-4">
    <h1 class="mb-4">üì¶ Lista de Productos</h1>

    {{#if payload.length}}
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#each payload}}
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text"><strong>Descripci√≥n:</strong> {{this.description}}</p>
                <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
                <p class="card-text"><strong>Categor√≠a:</strong> {{this.category}}</p>
                <p class="card-text"><strong>Stock:</strong> {{this.stock}}</p>
                <p class="card-text"><strong>C√≥digo:</strong> {{this.code}}</p>

                <form onsubmit="addToCart(event, '{{this._id}}')" class="mt-auto">
                  <button type="submit" class="btn btn-primary w-100">Agregar al carrito</button>
                </form>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="alert alert-warning mt-4">No hay productos para mostrar.</div>
    {{/if}}

    <div class="mt-4 d-flex justify-content-center align-items-center">
      {{#if hasPrevPage}}
        <a href="{{prevLink}}" class="btn btn-outline-secondary me-2">‚¨Ö Anterior</a>
      {{/if}}
      <span class="mx-2">P√°gina {{page}} de {{totalPages}}</span>
      {{#if hasNextPage}}
        <a href="{{nextLink}}" class="btn btn-outline-secondary ms-2">Siguiente ‚û°</a>
      {{/if}}
    </div>
  </div>

  <script>
    const cartId = '682d2b5d60d4d3863b85588d'; // üõí ID real de tu carrito

    async function addToCart(event, productId) {
      event.preventDefault();

      try {
        const response = await fetch(`/api/carts/${cartId}/product/${productId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const data = await response.json();
        if (response.ok) {
          alert('‚úÖ Producto agregado al carrito');
        } else {
          alert('‚ùå Error: ' + data.message);
        }
      } catch (err) {
        console.error(err);
        alert('‚ùå Error de red');
      }
    }
  </script>
</body>
</html>
